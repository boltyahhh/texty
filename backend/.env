# Application Settings
APP_NAME=Speech Sentiment API
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# Server Configuration
HOST=0.0.0.0
PORT=8000

# File Upload Settings
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=50MB
ALLOWED_AUDIO_FORMATS=.wav,.mp3,.m4a,.flac,.ogg

# Speech-to-Text Settings
STT_METHOD=whisper
WHISPER_MODEL_SIZE=base

# Sentiment Analysis Settings
SENTIMENT_METHOD=transformers
SENTIMENT_MODEL=cardiffnlp/twitter-roberta-base-sentiment-latest

# API Keys (uncomment and add your keys if using cloud services)
# OPENAI_API_KEY=your-openai-api-key
# GOOGLE_CLOUD_API_KEY=your-google-cloud-api-key
# AZURE_SPEECH_KEY=your-azure-speech-key
# AZURE_SPEECH_REGION=your-azure-region

# Database (optional - for storing results)
# DATABASE_URL=postgresql://username:password@localhost:5432/speech_sentiment_db
# REDIS_URL=redis://localhost:6379

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log